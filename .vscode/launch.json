{
  "configurations": [
  {
    "name": "Launch file",
    "type": "go",
    "request": "launch",
    "mode": "debug",
    "program": "${file}",
    "args": ["${input:certFile}"],
    "output": "${workspaceFolder}/bin/cert-bootstrapper-debug"
  }
  ],
  "inputs": [
    {
      "id": "certFile",
      "type": "promptString",
      "description": "Certificate to be bootstrapped"
    }
  ]
}